{
  "name": "heedy-streams",
  "version": "0.1.0",
  "description": "Support for streams in heedy",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:html && npm run build:js",
    "build:js": "rollup -c",
    "sync:html": "rsync -r ./public/ ../assets/public/",
    "build:html": "npm run sync:html && html-minifier --file-ext html --input-dir ../assets/public --output-dir ../assets/public --minify-css --minify-js --remove-comments --collapse-whitespace --case-sensitive --no-include-auto-generated-tags",
    "debug:js": "rollup -c -w",
    "debug:html": "nodemon --watch public -e html,css,js,json --exec \"npm run sync:html\"",
    "debug": "run-p 'debug:js' 'debug:html'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heedyserver/heedy.git"
  },
  "keywords": [
    "heedy"
  ],
  "author": "heedy Contributors",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/heedy/heedy/issues"
  },
  "homepage": "https://heedy.org",
  "dependencies": {
    "glob": "^7.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.16.6",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-external-globals": "^0.3.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-vue": "^5.0.1",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10"
  }
}
